<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="initial-scale=1.0">
    <title>{% block title %}{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('/css/standardize.css') }}">
    <link rel="stylesheet" href="{{ asset('/css/layout.css') }}">
    {% block stylesheets %}{% endblock %}
</head>
<body class="body page-homepage clearfix">

<header class="clearfix">
    <div class="header-center">
        <a href="{{ path('homepage') }}"><img class="nav-logo" src="{{ asset('/images/logo@2x.png') }}"></a>
        <nav class="clearfix">
            <a class="section {% if app.request.attributes.get('section') == 'homepage' %}active{% endif %}" href="{{ path('homepage') }}">
                About
            </a>
            <a class="section {% if app.request.attributes.get('section') == 'documentation' %}active{% endif %}" href="{{ path('behat_documentation_page', {'version': 'v3.0', 'path': 'index.html'}) }}">
                Documentation
            </a>
            <a class="fork-us" href="https://github.com/Behat/Behat">Fork us</a>
        </nav>
    </div>
</header>

<section class="page clearfix">
    {% block page %}{% endblock %}
</section>

<footer class="clearfix">
    <div class="footer-center">
        <span class="copyright">Copyright Â© 2011-2014 Konstantin Kudryashov.</span>
        <a class="github" href="https://github.com/Behat"></a>
        <a class="twitter" href="https://twitter.com/BehatPHP"></a>
    </div>
</footer>

{% block javascripts %}{% endblock %}
</body>
</html>
