{
    "require": {
        "php": "~5.5",
        "symfony/filesystem": "~2.5.3",
        "symfony/process": "~2.5.3"
    },

    "require-dev": {
        "behat/behat": "~3.0.12",
        "phpunit/phpunit": "~4.2.0",
        "phpspec/phpspec": "~2.1.0"
    },

    "autoload": {
        "psr-4": {
            "Behat\\Borg\\": "src/",
            "spec\\Behat\\Borg\\": ".",
            "tests\\Behat\\Borg\\": "."
        }
    },

    "scripts": {
        "test": "phpspec run && behat --format progress && phpunit"
    }
}
