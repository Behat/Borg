<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="extension.repo.path">%kernel.root_dir%/../extensions</parameter>
    </parameters>

    <services>

        <service id="extension.catalogue" class="Behat\Borg\ExtensionCatalogue">
            <argument type="service" id="extension.repository"/>
        </service>

        <service id="extension.repository"
                 class="Behat\Borg\Integration\Extension\PersistedObjectsRepository"
                 public="false">
            <argument>%extension.repo.path%/catalogue.meta</argument>
        </service>

    </services>

</container>
