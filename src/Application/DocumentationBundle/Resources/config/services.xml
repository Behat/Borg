<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="package.listener.download.documenting"
                 class="Behat\Borg\Documentation\DownloadBuilder">
            <argument type="service" id="documentation.source_finder.rst"/>
            <argument type="service" id="documentation.builder.sphinx"/>
            <call method="registerListener">
                <argument type="service" id="documentation.listener.build.publishing"/>
            </call>
        </service>

        <service id="documentation.listener.build.publishing"
                 class="Behat\Borg\Documentation\BuildPublisher">
            <argument type="service" id="documentation.publisher"/>
        </service>

        <service id="documentation.source_finder.rst"
                 class="Behat\Borg\SphinxDoc\RstFinder"/>

        <service id="documentation.builder.sphinx"
                 class="Behat\Borg\SphinxDoc\SphinxBuilder">
            <argument>%kernel.root_dir%/../build/docs</argument>
            <argument>%kernel.root_dir%/../src/Application/DocumentationBundle/Resources/sphinx</argument>
            <argument type="service">
                <service class="Symfony\Component\Filesystem\Filesystem"/>
            </argument>
        </service>

        <service id="documentation.publisher"
                 class="Behat\Borg\Documentation\Publisher\DirectoryPublisher">
            <argument>%kernel.root_dir%/../docs</argument>
        </service>

        <service id="twig.loader.documentation"
                 class="Behat\Borg\Application\DocumentationBundle\Twig\DocumentationLoader"
                 public="false">
            <argument type="service" id="documentation.publisher"/>
            <tag name="twig.loader"/>
        </service>

    </services>

</container>
