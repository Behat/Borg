<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service
                class="Behat\Borg\Application\DocumentationBundle\Command\GenerateDocumentationCommand">
            <argument type="service" id="documentation.manager"/>
            <tag name="console.command"/>
        </service>

        <service id="documentation.manager"
                 class="Behat\Borg\DocumentationManager">
            <argument type="service" id="documentation.provider"/>
            <argument type="service" id="documentation.builder"/>
            <argument type="service" id="documentation.publisher"/>
        </service>

        <service id="documentation.provider"
                 class="Behat\Borg\Package\Documentation\ReleaseDocumentationProvider">
            <argument type="service" id="package.release_downloader.github"/>
        </service>

        <service id="documentation.builder"
                 class="Behat\Borg\Documentation\Builder\StrategicDocumentationBuilder">
            <argument type="service">
                <service
                        class="Behat\Borg\Documentation\Builder\Strategy\RefreshableBuildStrategy">
                    <argument type="service" id="documentation.publisher"/>
                </service>
            </argument>
            <argument type="service">
                <service class="Behat\Borg\SphinxDoc\SphinxDocumentationGenerator">
                    <argument>%kernel.root_dir%/../build/docs</argument>
                    <argument>%kernel.root_dir%/../sphinx</argument>
                    <argument type="service">
                        <service class="Symfony\Component\Filesystem\Filesystem"/>
                    </argument>
                </service>
            </argument>
        </service>

        <service id="documentation.publisher"
                 class="Behat\Borg\Documentation\Publisher\DocumentationDirectoryPublisher">
            <argument>%kernel.root_dir%/../web/docs</argument>
        </service>

        <service id="package.release_downloader.github"
                 class="Behat\Borg\GitHub\GitHubBranchReleaseDownloader">
            <argument type="service" id="github.client"/>
            <argument>%kernel.root_dir%/../build/repositories</argument>
            <argument type="collection">
                <argument>behat/docs</argument>
            </argument>
        </service>

        <service id="github.client"
                 class="Github\Client">
            <call method="authenticate">
                <argument>%github_token%</argument>
                <argument>null</argument>
                <argument>url_token</argument>
            </call>
        </service>

    </services>

</container>
