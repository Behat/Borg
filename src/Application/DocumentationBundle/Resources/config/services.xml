<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="documentation.publisher.path">%kernel.root_dir%/../docs</parameter>
        <parameter key="documentation.build.path">%kernel.root_dir%/../build/docs</parameter>
    </parameters>

    <services>

        <service id="release.listener.download.packaging"
                 class="Behat\Borg\Package\ReleasePackager" public="false">
            <argument type="service" id="package.finder.compound"/>
            <call method="registerListener">
                <argument type="service" id="package.listener.package.documenter"/>
            </call>
        </service>

        <service id="package.finder.documentation"
                 class="Behat\Borg\PackageDocumentation\DocumentationPackageFinder" public="false"/>

        <service id="package.finder.composer"
                 class="Behat\Borg\ComposerPackage\ComposerPackageFinder" public="false"/>

        <service id="package.finder.compound"
                 class="Behat\Borg\Package\Finder\CompoundFinder" public="false">
            <argument type="collection">
                <argument type="service" id="package.finder.documentation"/>
                <argument type="service" id="package.finder.composer"/>
            </argument>
        </service>

        <service id="package.listener.package.documenter"
                 class="Behat\Borg\PackageDocumentation\PackageDocumenter"
                 public="false">
            <argument type="service" id="documentation.source_finder.rst"/>
            <argument type="service" id="documentation.documenter"/>
        </service>

        <service id="twig.loader.documentation"
                 class="Behat\Borg\Application\DocumentationBundle\Twig\DocumentationLoader"
                 public="false">
            <tag name="twig.loader"/>
        </service>

        <service id="documentation.documenter"
                 class="Behat\Borg\Documenter">
            <argument type="service" id="documentation.builder.sphinx"/>
            <argument type="service" id="documentation.publisher"/>
            <argument type="service" id="documentation.repository"/>
        </service>

        <service id="documentation.repository"
                 class="Behat\Borg\Application\Infrastructure\Documentation\PersistedObjectsRepository"
                 public="false">
            <argument>%documentation.publisher.path%/published.meta</argument>
        </service>

        <service id="documentation.source_finder.rst"
                 class="Behat\Borg\SphinxDoc\RstFinder" public="false"/>

        <service id="documentation.builder.sphinx"
                 class="Behat\Borg\SphinxDoc\SphinxBuilder" public="false">
            <argument>%documentation.build.path%</argument>
            <argument>%kernel.root_dir%/../src/Application/DocumentationBundle/Resources/sphinx</argument>
            <argument type="service">
                <service class="Symfony\Component\Filesystem\Filesystem"/>
            </argument>
        </service>

        <service id="documentation.publisher"
                 class="Behat\Borg\Documentation\Publisher\DirectoryPublisher">
            <argument>%documentation.publisher.path%</argument>
        </service>

    </services>

</container>
