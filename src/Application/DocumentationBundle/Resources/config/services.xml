<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service
                class="Behat\Borg\Application\DocumentationBundle\Command\PackageReleasedCommand">
            <argument type="service" id="release.manager"/>
            <tag name="console.command"/>
        </service>

        <service id="release.manager"
                 class="Behat\Borg\ReleaseManager">
            <call method="registerListener">
                <argument type="service" id="package.listener.release.downloading"/>
            </call>
        </service>

        <service id="package.listener.release.downloading"
                class="Behat\Borg\Package\Listener\DownloadingReleaseListener">
            <argument type="service" id="package.release_downloader"/>
            <call method="registerListener">
                <argument type="service" id="package.listener.download.documenting"/>
            </call>
        </service>

        <service id="package.listener.download.documenting"
                class="Behat\Borg\Documentation\Listener\DocumentingDownloadListener">
            <argument type="service" id="documentation.finder.rst"/>
            <argument type="service" id="documentation.builder.sphinx"/>
            <call method="registerListener">
                <argument type="service" id="documentation.listener.build.publishing"/>
            </call>
        </service>

        <service id="documentation.listener.build.publishing"
                class="Behat\Borg\Documentation\Listener\PublishingDocumentationBuildListener">
            <argument type="service" id="documentation.publisher"/>
        </service>

        <service id="package.release_downloader"
                 class="Behat\Borg\GitHub\GitHubReleaseDownloader">
            <argument type="service" id="github.client"/>
            <argument>%kernel.root_dir%/../build/repositories</argument>
            <argument type="collection">
                <argument>Behat/docs</argument>
            </argument>
        </service>

        <service id="documentation.finder.rst"
                class="Behat\Borg\SphinxDoc\RstDocumentationFinder"/>

        <service id="documentation.builder.sphinx"
                 class="Behat\Borg\SphinxDoc\SphinxDocumentationBuilder">
            <argument>%kernel.root_dir%/../build/docs</argument>
            <argument>%kernel.root_dir%/../sphinx</argument>
            <argument type="service">
                <service class="Symfony\Component\Filesystem\Filesystem"/>
            </argument>
        </service>

        <service id="documentation.publisher"
                 class="Behat\Borg\Documentation\Publisher\DocumentationDirectoryPublisher">
            <argument>%kernel.root_dir%/../web/docs</argument>
        </service>

        <service id="github.client"
                 class="Github\Client">
            <call method="authenticate">
                <argument>%github_token%</argument>
                <argument>null</argument>
                <argument>url_token</argument>
            </call>
        </service>

    </services>

</container>
