<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="documentation.publisher.path">%kernel.root_dir%/../docs</parameter>
        <parameter key="documentation.build.path">%kernel.root_dir%/../build/docs</parameter>
    </parameters>

    <services>

        <service id="package.listener.download.documenting"
                 class="Behat\Borg\PackageDocumentation\DownloadBuilder" public="false">
            <argument type="service" id="documentation.source_finder.rst"/>
            <argument type="service" id="documentation.manager"/>
        </service>

        <service id="twig.loader.documentation"
                 class="Behat\Borg\Application\DocumentationBundle\Twig\DocumentationLoader"
                 public="false">
            <tag name="twig.loader"/>
        </service>

        <service id="documentation.manager"
                 class="Behat\Borg\DocumentationManager">
            <argument type="service" id="documentation.builder.sphinx"/>
            <argument type="service" id="documentation.publisher"/>
        </service>

        <service id="documentation.source_finder.rst"
                 class="Behat\Borg\SphinxDoc\RstFinder" public="false"/>

        <service id="documentation.builder.sphinx"
                 class="Behat\Borg\SphinxDoc\SphinxBuilder" public="false">
            <argument>%documentation.build.path%</argument>
            <argument>%kernel.root_dir%/../src/Application/DocumentationBundle/Resources/sphinx</argument>
            <argument type="service">
                <service class="Symfony\Component\Filesystem\Filesystem"/>
            </argument>
        </service>

        <service id="documentation.publisher"
                 class="Behat\Borg\Documentation\Publisher\DirectoryPublisher">
            <argument>%documentation.publisher.path%</argument>
        </service>

    </services>

</container>
