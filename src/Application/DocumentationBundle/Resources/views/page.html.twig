{% extends '::layout.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/css/pygments.css') }}">
    <link rel="stylesheet" href="{{ asset('/css/documentation.css') }}">
{% endblock %}

{% block page %}
    <nav class="sidebar">
        <div class="meta">
            <h3>Meta</h3>
            <dl>
                <dt>Package name:</dt>
                <dd>{{ page.projectName }}</dd>
                <dt>Last edit:</dt>
                <dd>{{ page.documentationTime|date('d.m.Y, H:i', timezone="Zulu") }}</dd>
            </dl>
        </div>

        <div class="toc">
            <h3>Chapters</h3>
            {% block toc %}{% endblock %}
        </div>
    </nav>

    <section class="text">
        {% block text %}{% endblock %}
    </section>
{% endblock page %}
